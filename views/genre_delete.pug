extends layout

block content
  h1(class="pageTitle") #{title}: #{genre.name}

  if genre_films.length

    p(class="error") #[strong Delete the following movies before attempting to delete this genre.]
    div(class="filmDetailDelete") 
        p(class="subTitle") #[strong Movies:]
        div(class="smallMoviesContainer")
            each film in genre_films
                div(class="smallMovie")
                    a(href=film.url) 
                        img(class="filmCoverSmall" src=film.image_url)
                    div(class="smallDetail")
                        h4(class="smallTitle")= film.title
                        div(class="summary") #{film.summary}

  else
    p(class="error") #[strong  Do you really want to delete this genre?]

    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )

      button.buttonMenu(type='submit') Delete